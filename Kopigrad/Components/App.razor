    <!-- 1) Подключаем html2canvas (без integrity, чтобы не было блокировок) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <!-- Ставим белый фон вместо прозрачного -->
    <script>
        window.downloadVisitCard = async (selector, filename) => {
            const el = document.querySelector(selector);
            if (!el) {
                console.error("Element not found:", selector);
                return;
            }
            // здесь фон будет белым
            const canvas = await html2canvas(el, { backgroundColor: '#ffffff' });
            const dataUrl = canvas.toDataURL("image/png");
            const a = document.createElement("a");
            a.href = dataUrl;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        };
    </script>



